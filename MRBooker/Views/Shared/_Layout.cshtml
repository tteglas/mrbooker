<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MRBooker</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/bootstrap-colorpicker.css" />
        <link rel="stylesheet" href="~/lib/scheduler/codebase/dhtmlxscheduler.css" type="text/css">
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/bootstrap-colorpicker.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/lib/scheduler/codebase/dhtmlxscheduler.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-2">
                <div id="mySidenav" class="sidenav">
                    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                    <a class="" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="" asp-area="" asp-controller="Home" asp-action="About">About</a>
                    <a class="" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>

                    @await Html.PartialAsync("_LoginPartial")
                </div>
                <div id="main" class="d-flex justify-content-center">
                    <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776; menu</span>
                </div>
            </div>
            <div class="col-10 body-content">
                @RenderBody()
                <hr />
            </div>
        </div>
    </div>
    <environment include="Development">
        <script src="~/js/jquery.js" asp-append-version="true"></script>
        <script src="~/lib/popper.js/dist/umd/popper.js" asp-append-version="true"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/bootstrap.js" asp-append-version="true"></script>
        <script src="~/js/bootstrap-colorpicker.js" asp-append-version="true"></script>
        <script src="~/js/notify.js" asp-append-version="true"></script>
        <script src="~/js/signalr.js" asp-append-version="true"></script>
    </environment>

    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.4.1.min.js"
                asp-fallback-src="~/js/jquery.min.js"
                crossorigin="anonymous">
        </script>
        <script src="~/lib/popper.js/dist/umd/popper.min.js"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/4.3.1/bootstrap.min.js"
                asp-fallback-src="~/js/bootstrap.min.js"
                crossorigin="anonymous">
        </script>
        <script src="~/js/bootstrap-colorpicker.min.js" asp-append-version="true"></script>
        <script src="~/js/notify.min.js"></script>
        <script src="~/js/signalr.min.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
<script>
    function openNav() {
        $("#mySidenav").width("15%");
        $("#mySidenav").css('min-width: 180px;');
        document.getElementById("main").style.visibility = "hidden";
    }

    function closeNav() {
        $("#mySidenav").width("0");
        document.getElementById("main").style.visibility = "visible";
    }
</script>