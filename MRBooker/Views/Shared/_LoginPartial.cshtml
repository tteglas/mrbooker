@using MRBooker.Wrappers;
@using MRBooker.Data.Models.Entities;

@inject SignInManager<ApplicationUser> SignInManager
@inject ApplicationUserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <hr />
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="nav-item">

        <a class="nav-link" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">My Account</a>
        @if (User.IsInRole("Admin"))
        {
            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">[Administrate]</a>
        }
        <button type="submit" class="">Log out</button>
    </form>
}
else
{
    <a asp-area="" asp-controller="Account" asp-action="Register">Register</a>
    <a asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
}
